        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="deal"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>